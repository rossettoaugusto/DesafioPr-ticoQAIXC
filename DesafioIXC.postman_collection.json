					"script": {
						"exec": [
							"const json = pm.response.json();",
							"const bookingid = json.bookingid;",
							"",
							"pm.collectionVariables.set(\"idReserva\", json.bookingid);",
							"",
							"pm.test(\"Requisiçao retornou status code 200\", function() {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Agendamento cadastrado com o numero \" + bookingid), function (){",
							"    pm.expect(json.bookingid).to.exist;",
							"    pm.expect(json.firstname).to.eql(\"Augusto\");",
							"}",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
