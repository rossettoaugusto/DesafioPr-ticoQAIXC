							"pm.test(\"Requisiçao retornou status code 200\", function () {    ",
							"    pm.response.to.have.status(200);    ",
							"}); ",
							"",
							"pm.test(\"Validar se foi efetuado o deposito\", function () {",
							"    pm.expect(pm.response.json().depositpaid).to.be.true;",
							"}); ",
							"",
							"pm.test(\"Validar o nome completo do cliente\", function () {",
							"    pm.expect(pm.response.json().firstname + \" \" + pm.response.json().lastname).to.eql(\"Augusto Rossetto\");",
